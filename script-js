const caixaPrincipal = document.querySelector(".caixa-principal");
const caixaPerguntas = document.querySelector(".caixa-perguntas");
const caixaAlternativas = document.querySelector(".caixa-alternativas");
const caixaResultado = document.querySelector(".caixa-resultado");
const textoResultado = document.querySelector(".texto-resultado");

const perguntas = [
    {
       enunciado: "Vocễ gosta de praticar esportes?",
        alternativas: [
            {
                texto: "Sim, com certeza!",
                afirmacao: "Então você deve ser uma pessoa ativa esportivamente. "
            },
            {
                texto: "Não, prefiro outros esportes.",
                afirmacao: "Então você deve gostar de ler, assistir?."
            }
        ]
    },
    {
        enunciado: "quais das atividades a seguir você prefere?",
        alternativas: [
            {
                texto: "corre, pedalar, nadar, futebol, basquete, volêi.",
                afirmacao: "então você pratica esportes."
            },
            {
                texto: "assistir,dormir, ler, mecher no celular, trabalhar, estudar.",
                afirmacao: "você não gosta de praticar esportes."
            }
        ]
    },
    {
        enunciado: "você tem uma rotina exaustiva apartir de suas atividades?",
        alternativas: [
            {
                texto: "sim, canso demais.",
                afirmacao: "você é uma pessoa que descansa pouco."
            },
            {
                texto: "não, suporto bem de boa.",
                afirmacao: "então você é uma pessoa que dorme bem."
            }
        ]
    },
    {
        enunciado: "você acha que sua rotina está fazendo bem para sua saude?",
        alternativas: [
            {
                texto: " sim, melhora muito minha saude.",
                afirmacao: "sua rotina esta sendo conciliada com suas atividades."
            },
            {
                texto: "não, esta cada ves mais exausto.",
                afirmacao: "você deve rever um pouco mas sua rotina!"
            }
        ]
    },
    {
        enunciado: "você está indo bem a escola mesmo com sua rotina cansativa? ",
        alternativas: [
            {
                texto: "sim, estou indo muito bem.",
                afirmacao: "muito bem, você é uma pessoa que consegue se dedica em tudo mesmo tendo essa rotina cansativa."
            },
            {
                texto: "não, estou indo mal.",
                afirmacao: "você terá que rever suas tarefas, e deixar um tempo maior para estudar. "
            }
        ]
    },
];


let atual = 0;
let perguntaAtual;
let historiaFinal = "";

function mostraPergunta() {
    if (atual >= perguntas.length) {
        mostraResultado();
        return;
    }
    perguntaAtual = perguntas[atual];
    caixaPerguntas.textContent = perguntaAtual.enunciado;
    caixaAlternativas.textContent = "";
    mostraAlternativas();
      }

function mostraAlternativas(){
    for(const alternativa of perguntaAtual.alternativas) {
        const botaoAlternativas = document.createElement("button");
        botaoAlternativas.textContent = alternativa.texto;
        botaoAlternativas.addEventListener("click", () => respostaSelecionada(alternativa));
        caixaAlternativas.appendChild(botaoAlternativas);
    }
}

function respostaSelecionada(opcaoSelecionada) {
    const afirmacoes = opcaoSelecionada.afirmacao;
    historiaFinal += afirmacoes + " ";
    atual++;
    mostraPergunta();
}

function mostraResultado() {
    caixaPerguntas.textContent = "Em 2049...";
    textoResultado.textContent = historiaFinal;
    caixaAlternativas.textContent = "";
}

mostraPergunta();